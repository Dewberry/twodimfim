{
  "name": "Lisflood App Dev",
  "build": {
        "dockerfile": "../dockerfile",
        "context": ".."
    },

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=${localWorkspaceFolder}/data,target=/data,type=bind",
    "source=/root/lisflood/01_commmunity_nextgen.gpkg,target=/hydrofabric/01_commmunity_nextgen.gpkg,type=bind"
  ],

  "workspaceFolder": "/workspace",

  "remoteUser": "root",
  "runArgs": ["--network=host"],

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff"
      ]
    }
  }
}
